{% extends 'HatueySoftTicketBundle::layout.html.twig' %}

{% block title 'Listado de proyectos' %}

{% block headline block('Listado de proyectos') %}

{% block tituloPagina %}
    <h1>Listado de proyectos</h1>
{% endblock %}

{% block content -%}

    <a href="{{ path('proyecto_new') }}" class="btn btn-primary" style="margin-bottom: 8px">
        <span class="glyphicon glyphicon-plus"></span>
        Adicionar proyecto
    </a>
    <table class="records_list table table-hover table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Nombre corto</th>
                <th>Descripci&oacuten</th>
                <th>Fecha de inicio</th>
                <th>Fecha de fin</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proyecto_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.nombreCorto }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.fechaFin %}{{ entity.fechaFin|date('Y-m-d') }}{% endif %}</td>
                <td>
                <ul>

                        <a href="{{ path('proyecto_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-eye-open"></span> Mostrar</a>


                        <a href="{{ path('proyecto_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil"></span> Editar</a>

                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
