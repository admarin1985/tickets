{% extends 'HatueySoftTicketBundle::layout.html.twig' %}

{% block title 'Listado de empresas' %}

{% block headline block('title') %}

{% block tituloPagina %}
    <h1>Listado de empresas</h1>
{% endblock %}

{% block content -%}
    <a href="{{ path('empresa_new') }}" class="btn btn-primary" style="margin-bottom: 8px">
        <span class="glyphicon glyphicon-plus"></span>
        Adicionar empresa
    </a>
    <table class="records_list table table-hover table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Nombre corto</th>
                <th>Direcci&oacuten</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('empresa_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.nombreCorto }}</td>
                <td>{{ entity.direccion }}</td>
                <td>
                <ul>

                        <a href="{{ path('empresa_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-eye-open"></span> Mostrar</a>


                        <a href="{{ path('empresa_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil"></span> Editar</a>

                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
